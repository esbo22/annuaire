<div class="row d-flex justify-content-center">
  <div class="col-md-4">
    <h1>Connexion</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :label => "Email",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password, :label => "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "mot de passe actuel" } %>
        <%= f.input :remember_me, as: :boolean, :label => "Souvenez-vous de moi" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions login-button">
        <%= f.button :submit, "Connexion" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="main-container">

  <div class="book-container">
    <div class="show-title">
      <h2>Ma réservation</h2>
      <%= link_to bookings_path do %>
        <button class="btn btn-principal btn-margin-top">Toutes mes réservations</button>
      <% end %>
    </div>


    <div class="book-content">
      <%= image_tag @flat.images.first, height: 300, width: 400, crop: :fill %>
      <div class="book-info">
        <h3><%= @flat.address %></h3>
        <div class="book-date">
          <h5>Réservé :</h5>
          <h5>Du <%= @booking.start_date.strftime('%e %B %Y')%></h5>
          <h5>Au <%= @booking.end_date.strftime('%e %B %Y')%></h5>
        </div>
        <div class="book-price">
          <h3>Prix total : <%= @total_price %> €</h3>
        </div>
      </div>
    </div>
    <div class="book-description">
      <li><%= @flat.description %></li>
    </div>
    <%= link_to user_messages_path(@flat.user), class:"btn btn-principal btn-margin-top" do %>
      Contacter le propriétaire
    <% end %>
  </div>

  <div
    id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
